import Nav from "../components/Nav.svelte";
import Footer from "../components/Footer.astro";
import "../styles/tailwind.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
